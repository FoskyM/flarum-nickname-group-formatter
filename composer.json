{
    "name": "foskym/nickname-group-formatter",
    "description": "根据用户所属的组，为用户昵称添加自定义显示效果。",
    "keywords": [
        "flarum",
        "nickname",
        "group",
        "formatter"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": ">=1.8.0"
    },
    "authors": [
        {
            "name": "FoskyM",
            "email": "i@fosky.top",
            "role": "Developer",
            "homepage": "https://fosky.top"
        }
    ],
    "support": {
        "source": "https://github.com/FoskyM/flarum-nickname-group-formatter",
        "forum": "https://discuss.flarum.org/d/33386"
    },
    "autoload": {
        "psr-4": {
            "FoskyM\\NicknameGroupFormatter\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Nickname Group Formatter",
            "icon": {
                "name": "fas fa-paint-brush",
                "backgroundColor": "#3271ae",
                "color": "#fff"
            }
        }
    }
}
